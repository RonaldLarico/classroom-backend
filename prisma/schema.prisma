// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id          Int         @id @default(autoincrement())
  active      Boolean     @default(true)
  user        String
  password    String
  name        String
  role        Role        @default(ADMIN)
  token       String?
  createdAt   DateTime    @default(now())
  updateAt    DateTime?   @updatedAt
  groups      StudentOnGroups[]
}

model Cycle {
  id              Int         @id @default(autoincrement())
  name            String
  group           Group[]
}

model Group {
  id              Int         @id @default(autoincrement())
  name            String
  link            String?
  cycle           Cycle       @relation(fields: [cycleId], references: [id])
  cycleId         Int
  students        StudentOnGroups[]
}

model StudentOnGroups {
  studentId          Int
  groupId            Int
  student            Student     @relation(fields: [studentId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  group              Group       @relation(fields: [groupId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@id([studentId, groupId])
}

model Logs {
  id               Int        @id @default(autoincrement())
  errorDescription String?
  message          String?
  errorContent     String?
  createdAt        DateTime   @default(now())
}

enum Role {
  ADMIN
  USER
}